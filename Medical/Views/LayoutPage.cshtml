<!doctype html>
<html lang="en">
<head>
    <title>Medically &mdash;</title>
   @* <img src="img/accomodator-mini.png" title="title" alt="additional title" />*@
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/jquery-ui.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="/css/bootstrap-datepicker.css">

    <link rel="stylesheet" href="/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="/css/aos.css">

    <link rel="stylesheet" href="/css/style.css">

</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">


    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status" >
            <span  class="sr-only">Loading...</span>
        </div>
    </div>


    <div class="site-wrap">
        <div style="background-color:maroon" class="site-mobile-menu site-navbar-target">
            <div style="background-color:maroon" class="site-mobile-menu-header">
                <div style="background-color:maroon" class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>

        <header id="header" class="fixed-top">
            <div class="container d-flex align-items-center">
                <h1 class="logo mr-auto">
                    <a href="~/">
                        <img src="~/images/logo.png" />
                    </a>
                </h1>

                <audio src="/images/music.mp3" controls style="position:fixed; left: 30px; top:30px">
                    <p>If you are reading this, it is because your browser does not support the audio element.</p>
                </audio>

                @if (RouteConfig.user != null)
                {
                    <nav class="nav-menu d-none d-lg-block">
                        <ul>

                            @if (RouteConfig.user.ReturnType() == "Admin" || RouteConfig.user.ReturnType() == "Doctor")
                            {
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            }
                            @*<li class="active"><a href="index.html">Home</a></li>*@
                            @if (RouteConfig.user.ReturnType() == "Admin" || RouteConfig.user.ReturnType() == "Doctor")
                            {
                                <li>@Html.ActionLink("Patients", "Patients", "Patient")</li>
                            }
                            @if (RouteConfig.user.ReturnType() == "Admin")
                            {
                                <li>@Html.ActionLink("Doctors", "Doctors", "Doctor")</li>
                            }
                            @if (RouteConfig.user.ReturnType() == "Admin")
                            {

                                <li> @Html.ActionLink("Medicines Catalog", "Catalog", "Home")</li>

                            }
                            @if (RouteConfig.user.ReturnType() == "Admin" || RouteConfig.user.ReturnType() == "Doctor")
                            {
                                <li>@Html.ActionLink("About Us", "AboutUs", "Home")</li>
                            }


                            <li style="color:black; padding: 10px 20px; font-size: 14px; font-weight: 500;">Hello @RouteConfig.user.FirstName @RouteConfig.user.LastName |</li>

                        </ul>

                    </nav>

                    if (RouteConfig.user != null)
                    {
                        <a class="blue-btn" href="~/Home/Logout" style="color:white"><i class="fa fa-sign-in"></i> Log Out</a>
                    }

                }


            </div>
        </header>




        @RenderBody()
        <footer style="background-color:maroon; padding:0px" class="site-footer bg-primary">
            <div style="background-color:maroon" class="col">
                <div style="background-color:maroon" class="row">
                    <div class="col-lg-3" style="background-color:maroon">
                        <div style="background-color:maroon; margin:0px; width:100%" class="social">
                            <br />
                            <a href="#" class=""><span style="color:maroon" class="icon-facebook"></span></a>
                            <a href="#" class=""><span style="color:maroon" class="icon-twitter"></span></a>
                            <a href="#" class=""><span style="color:maroon" class="icon-linkedin"></span></a>
                            <a href="#" class=""><span style="color:maroon" class="icon-instagram"></span></a>
                        </div>
                    </div>
                </div>

                <div style="background-color:maroon" class="row pt-5 mt-5 text-center">
                    <div style="background-color:maroon" class="col-md-12">
                        <div style="background-color:maroon" class="border-top pt-5">
                            <p class="copyright">

                            </p>

                        </div>
                    </div>

                </div>
            </div>
        </footer>
    </div>
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.countdown.min.js"></script>
    <script src="/js/jquery.easing.1.3.js"></script>
    <script src="/js/aos.js"></script>
    <script src="/js/jquery.fancybox.min.js"></script>
    <script src="/js/jquery.sticky.js"></script>
    <script src="/js/isotope.pkgd.min.js"></script>


    <script src="/js/main.js"></script>


</body>

</html>
