
@{
    ViewBag.Title = "AddPatient";
    Layout = "~/Views/LayoutPage.cshtml";
}

<div class="site-section pb-0">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-7 pr-md-7 mb-5">
                <form action="#" method="post">
                    <div class="form-group">
