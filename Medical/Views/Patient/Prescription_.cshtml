@model IEnumerable<BE.Medicine>  
@{
    ViewBag.Title = "Prescription_";
    Layout = "~/Views/LayoutPage.cshtml";
}


<div class="site-section pb-0">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-7 pr-md-7 mb-5">
                <form action="#" method="post">
                    <div class="form-group">
                        <label for="PatientId">Patient ID</label>

                        <input name="PatientId" type="text" value="@ViewBag.id" class="form-control" id="PatientId" disabled>
                    </div>
                    <div class="form-group">
                        <label for="DoctorFirstName">Doctor First Name</label>
                        <input name="DoctorFirstName" type="text" value="@RouteConfig.user.FirstName" class="form-control" id="DoctorFirstName" disabled>
                    </div>
                    <div class="form-group">
                        <label for="DoctorLastName">Doctor Last Name</label>
                        <input name="DoctorLastName" type="text" value="@RouteConfig.user.LastName" class="form-control" id="DoctorLastName" disabled>
                    </div>
                    <div>
                        <label for="Medicine">Medicine</label>
                        <select name="Medicine" id="Medicine">

                            @foreach (var item in Model)
                            {
                                <option>
                                    @(item.CommercialName)
                                </option>

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="BeginDate">Begin Date</label>
                        <input name="BeginDate" type="date" class="form-control" id="BeginDate">
                    </div>
                    <div class="form-group">
                        <label for="FinishDate">Finish Date</label>
                        <input name="FinishDate" type="date" class="form-control" id="FinishDate">
                    </div>
                    <div class="form-group">
                        <a data-toggle="modal" data-target="#popup1" style="color:#C7187D; font-family:'Segoe UI';right:1000px">בלה</a>
                        @*<input type="submit" class="btn btn-primary py-3 px-5" value="Add Prescription">*@
                    </div>
                </form>
            </div>




        </div> <!-- .row -->

    </div>
</div>




